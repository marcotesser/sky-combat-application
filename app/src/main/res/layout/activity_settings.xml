<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:background="@drawable/background_gradient"
    tools:context=".SettingsActivity">

    <TextView
        android:id="@+id/settings_title"
        android:layout_width="176dp"
        android:layout_height="81dp"
        android:fontFamily="@font/old_school_united_stencil"
        android:gravity="center"
        android:shadowColor="#282827"
        android:shadowDx="+6"
        android:shadowDy="+6"
        android:shadowRadius="3"
        android:text="SETTINGS"
        android:textColor="#ecb02c"
        android:textSize="40sp"
        app:layout_constraintBottom_toTopOf="@+id/score"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/score"
        android:layout_width="0dp"
        android:layout_height="78dp"
        android:fontFamily="@font/old_school_united_stencil"
        android:gravity="center"

        android:shadowDx="+6"
        android:shadowDy="+6"
        android:shadowRadius="3"
        android:text="Volume musica"
        android:shadowColor="#282827"
        android:textColor="#354815"
        android:textSize="40sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.385" />

    <TextView
        android:id="@+id/score2"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:fontFamily="@font/old_school_united_stencil"
        android:gravity="center"
        android:lineSpacingExtra="10sp"
        android:shadowColor="#282827"
        android:shadowDx="+6"
        android:shadowDy="+6"
        android:shadowRadius="3"
        android:text="ModalitÃ  \nfantasma"
        android:textColor="#354815"
        android:textSize="40sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/volume_seekBar" />

    <SeekBar
        android:id="@+id/volume_seekBar"
        style="@style/Widget.AppCompat.SeekBar"
        android:layout_width="376dp"
        android:layout_height="36dp"
        android:max="10"
        android:progress="10"
        android:progressTint="#ecb02c"
        android:thumbTint="#354815"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/score" />

    <Switch
        android:id="@+id/ghost_switch"
        android:layout_width="53dp"
        android:layout_height="54dp"
        android:thumbTint="#354815"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/score2" />

    <TextView
        android:id="@+id/DeleteAccount"
        android:layout_width="243dp"
        android:layout_height="80dp"
        android:fontFamily="@font/old_school_united_stencil"
        android:gravity="center"
        android:text="To delete the account send an email to everbuilds@gmail.com"
        android:textColor="#354815"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/tutorialButton"
        android:layout_width="203dp"
        android:layout_height="80dp"
        android:background="@drawable/tutorial_button_animated"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ghost_switch" />


</androidx.constraintlayout.widget.ConstraintLayout>